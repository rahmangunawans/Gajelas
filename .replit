modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["atk", "cairo", "cargo", "gdk-pixbuf", "glib", "gtk3", "libiconv", "openssl", "pango", "postgresql", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ATV Dashboard Direct"

[[workflows.workflow]]
name = "ATV Dashboard Direct"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python dashboard_direct.py"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 8080
externalPort = 8080

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]
