modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["atk", "cairo", "cargo", "gdk-pixbuf", "glib", "gtk3", "libiconv", "openssl", "pango", "postgresql", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ATV Mobile App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ATV Simple Test"

[[workflows.workflow]]
name = "ATV Mobile App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && python -u app.py"
waitForPort = 5000

[[workflows.workflow]]
name = "ATV Simple Test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && python -u app_simple.py"
waitForPort = 6000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 6000
externalPort = 6000

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 8080
externalPort = 8080

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]
